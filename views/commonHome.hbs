<h1>Employee Dashboard</h1>
<div class="container">
    <div class="row">
        <div class="col-md-4 menu">
            <div>Accumlated PTO: {{pto}}</div>
            <div>Remaining Sick Days: {{sto}}</div>
            <div class="big-button">
                <a href="/schedule">View My Schedule</a>
            </div>
            <div class="big-button">
                <a href="/send-request-form">Request Time Off</a>
            </div>
        </div>
        <div class="col-md-8">
            <div class="row">
                <div class="col-md-6">
                    <div class="dashBox mainDashBox">
                        <div class="dashLabel">Notifications</div>
                        <div class="dashContent" id="notificationsBox"></div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="dashBox mainDashBox">
                        <div class="dashLabel">Time Card</div>
                        <div class="dashContent timeCardBox" id="timeCardBox">
                            <div class="row">
                                <div class="col-sm-12 clock">
                                    2h 12min
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="small-button">
                                        <a href="/clock-in">Clock In</a>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="small-button">
                                        <a href="/clock-out">Clock Out</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="dashBox mainDashBox">
                        <div class="dashLabel">Schedule</div>
                        <div class="dashContent" id="mySchedBox"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div>{{message}}</div>
</div>
